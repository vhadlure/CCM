@model Clinic.Models.Dashboard.DashboardModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dashboard
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Html.ValueFor(Model => Model.TotalClinic)<sup style="font-size: 20px">+</sup></h3>
                    <p>Total Clinic</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="/Clinic/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@Html.ValueFor(Model => Model.TotalPatient)<sup style="font-size: 20px">+</sup></h3>
                    <p>Total Patient</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/Patient/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Html.ValueFor(Model => Model.TotalUser)<sup style="font-size: 20px">+</sup></h3>
                    <p>Total User</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="/User/Index" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
<script src="~/Scripts/utility/common.js"></script>
<script src="~/plugins/jQueryUI/jquery-ui.min.js"></script>
<!-- /.content -->
<script src="~/plugins/jQueryUI/jquery-ui.min.js"></script>
<script>
    $(document).ready(function () {
        applyTriggerNotify();
        setTimeout(function () {
            $(".DashboardMM").addClass("active");
        }, 1000);
    });
</script>