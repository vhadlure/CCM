@model Clinic.Models.PatientModel.PatientModel
<form class="form-horizontal" id="AddVitalFormID" action="/Patient/SaveVitalDetails" method="post">
    <div class="box-body">
        <div class="form-group">
            @Html.HiddenFor(model => model.PatientID)
            <label for="inputEmail3" class="col-sm-3 control-label">Blood Pressure <span class="red"> *</span></label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.BloodPressure, new { @class = "form-control ", placeholder = "Blood Pressure" })
            </div>
            <label for="inputPassword3" class="col-sm-3 control-label">Chest Circumference<span class="red"> *</span></label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.ChectCircumference, new { @class = "form-control ", placeholder = "Chect Circumference" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label">Height<span class="red"> *</span></label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Height, new { @class = "form-control ", placeholder = "Height" })
            </div>
            <label for="inputEmail3" class="col-sm-3 control-label">Pain<span class="red"> *</span></label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Pain, new { @class = "form-control ", placeholder = "Pain" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-3 control-label">Respiration<span class="red"> *</span></label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Respiration, new { @class = "form-control ", placeholder = "Respiration" })
            </div>
            <label for="inputPassword3" class="col-sm-3 control-label">Weight<span class="red"> *</span></label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Weight, new { @class = "form-control ", placeholder = "Weight" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label">Pulse Oximetry<span class="red"> *</span></label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.PulseOximetry, new { @class = "form-control ", placeholder = "Pulse Oximetry" })
            </div>
            <label for="inputEmail3" class="col-sm-3 control-label">Pulse<span class="red"> *</span></label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Pulse, new { @class = "form-control ", placeholder = "Pulse" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label">Temperature<span class="red"> *</span></label>
            <div class="col-sm-3">
                @Html.TextBoxFor(model => model.Temperature, new { @class = "form-control ", placeholder = "Temperature" })
            </div>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <button type="button" class="btn btn-info pull-right" onclick="SaveVitalDetails();">Add</button>
    </div>
    <!-- /.box-footer -->
</form>
