@model IEnumerable<Clinic.Models.PatientModel.PatientModel>

@{
    ViewBag.Title = "PatientProfileView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/themes/base/minified/AdminLTE.min.css" rel="stylesheet" />
<section class="content-header">
    <h1>
        Patient
        <small>
            Patient Profile
        </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Patient</a></li>
        <li class="active">Profile</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="~/dist/img/user4-128x128.jpg" style="margin:auto;width:100px;padding:3px;border:3px solid #d2d6de;" alt="User profile picture">
                        <h3 class="profile-username text-center">@item.FullName</h3>
                        <p class="text-muted text-center">@item.Address</p>
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>DOB</b> <a class="pull-right">@item.DOBStr</a>
                            </li>
                            <li class="list-group-item">
                                <b>Age</b> <a class="pull-right">@item.age</a>
                            </li>
                            <li class="list-group-item">
                                <b>Gender</b> <a class="pull-right">@item.GenderStr</a>
                            </li>
                            <li class="list-group-item">
                                <b>Contact Number</b> <a class="pull-right">@item.MobileNumber</a>
                            </li>
                        </ul>
                        <a href="/Patient/PatientIndividualProfile/PatientID=" class="btn btn-primary btn-block"><b>Follow</b></a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
